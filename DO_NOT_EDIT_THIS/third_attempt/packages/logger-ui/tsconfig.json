{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    // "types": ["vite/client"], // Removed unnecessary Vite client types
    "types": ["vitest/globals", "@testing-library/jest-dom"], // Add Vitest global types and jest-dom matchers
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "noEmit": true
    // "composite": true, // If using TS project references
    // "extends": "../../tsconfig.base.json" // If applicable
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
