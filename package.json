{
  "name": "one-button-to-space",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "A physics-based rocket game with minimal controls.",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:client\"",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "dev:physics-worker": "pnpm --filter @one-button-to-space/physics-worker dev",
    "test": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:client": "pnpm --filter client test",
    "test:server": "pnpm --filter server test",
    "test:logger": "pnpm --filter @one-button-to-space/logger-ui test",
    "test:shared": "pnpm --filter @one-button-to-space/shared test",
    "test:physics-worker": "pnpm --filter @one-button-to-space/physics-worker test",
    "lint": "pnpm -r lint",
    "lint:client": "pnpm --filter client lint",
    "lint:server": "pnpm --filter server lint",
    "lint:logger": "pnpm --filter @one-button-to-space/logger-ui lint",
    "lint:shared": "pnpm --filter @one-button-to-space/shared lint",
    "lint:physics-worker": "pnpm --filter @one-button-to-space/physics-worker lint",
    "verify": "pnpm run test && pnpm run lint",
    "verify:logger": "pnpm run test:logger && pnpm run lint:logger",
    "verify:physics-worker": "pnpm run test:physics-worker && pnpm run lint:physics-worker",
    "build": "pnpm -r build"
  },
  "keywords": [
    "phaser",
    "matterjs",
    "colyseus",
    "react",
    "typescript",
    "game"
  ],
  "author": "Gemini",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@vitest/coverage-v8": "catalog:",
    "concurrently": "^9.1.2",
    "jsdom": "^26.1.0",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@vitest/ui": "^3.1.3"
  }
}
