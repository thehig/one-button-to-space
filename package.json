{
  "name": "one-button-to-space",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "A physics-based rocket game with minimal controls.",
  "scripts": {
    "client": "pnpm --filter client dev",
    "server": "pnpm --filter server dev",
    "shared": "pnpm --filter @one-button-to-space/shared dev",
    "logger": "pnpm --filter @one-button-to-space/logger-ui dev",
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "build": "pnpm -r build",
    "test": "vitest run --coverage"
  },
  "keywords": [
    "phaser",
    "matterjs",
    "colyseus",
    "react",
    "typescript",
    "game"
  ],
  "author": "Gemini",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/react": "catalog:",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitest/coverage-v8": "catalog:",
    "concurrently": "^8.2.2",
    "jsdom": "^26.1.0",
    "vitest": "catalog:"
  }
}
